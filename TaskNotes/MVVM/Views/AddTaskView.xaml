<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TaskNotes.MVVM.ViewModels"
             x:Class="TaskNotes.MVVM.Views.AddTaskView"
             x:DataType="vm:TaskGestorViewModel"
             Title="Nueva tarea"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight},
                                              Dark={StaticResource BackgroundDark}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="28">

            <!-- Formulario -->
            <Border StrokeShape="RoundRectangle 16"
                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight},
                                                      Dark={StaticResource SurfaceDark}}"
                    Padding="20">

                <VerticalStackLayout Spacing="20">

                    <Label Text="Detalles"
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight},
                                                   Dark={StaticResource TextSecondaryDark}}"/>

                    <!-- Título -->
                    <Entry Placeholder="¿Qué hay que hacer?"
                           Text="{Binding NewTaskTitle}"
                           FontSize="17"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight},
                                                   Dark={StaticResource TextPrimaryDark}}"
                           PlaceholderColor="{AppThemeBinding Light={StaticResource TextSecondaryLight},
                                                              Dark={StaticResource TextSecondaryDark}}"/>

                    <!-- Descripción -->
                    <Editor Placeholder="Añadir notas o descripción…"
                            Text="{Binding NewTaskDescription}"
                            FontSize="15"
                            AutoSize="TextChanges"
                            HeightRequest="110"
                            TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight},
                                                    Dark={StaticResource TextPrimaryDark}}"
                            PlaceholderColor="{AppThemeBinding Light={StaticResource TextSecondaryLight},
                                                               Dark={StaticResource TextSecondaryDark}}"/>

                    <!-- Fecha / Prioridad -->
                    <Grid ColumnDefinitions="*,*"
                          ColumnSpacing="16">

                        <!-- Fecha -->
                        <VerticalStackLayout Grid.Column="0"
                                             Spacing="6">
                            <Label Text="Fecha límite"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight},
                                                   Dark={StaticResource TextSecondaryDark}}"/>
                            <DatePicker Date="{Binding NewTaskDate}"
                                        MinimumDate="01/01/2024"
                                        Margin="0,15,0,0"
                                        FontSize="30"
                                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight},
                                                                Dark={StaticResource TextPrimaryDark}}"/>
                        </VerticalStackLayout>

                        <!-- Prioridad -->
                        <VerticalStackLayout Grid.Column="1"
                                             Spacing="6">
                            <Label Text="Prioridad"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight},
                                                   Dark={StaticResource TextSecondaryDark}}"/>
                            <Picker ItemsSource="{Binding Priorities}"
                                    SelectedItem="{Binding NewTaskPriority}"
                                    Title="Seleccionar prioridad"
                                    FontSize="15"
                                    TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight},
                                                                Dark={StaticResource TextPrimaryDark}}"/>

                        </VerticalStackLayout>

                    </Grid>

                </VerticalStackLayout>
            </Border>

            <Button Text="Guardar tarea"
                    HeightRequest="52"
                    CornerRadius="14"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    Command="{Binding AddTaskCommand}"
                    IsEnabled="{Binding IsFormValid}"
                    Opacity="{Binding IsFormValid, Converter={StaticResource BoolToOpacityConverter}}">
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
