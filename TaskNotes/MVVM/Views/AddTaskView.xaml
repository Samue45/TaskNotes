<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TaskNotes.MVVM.ViewModels"
             xmlns:models="clr-namespace:TaskNotes.MVVM.Models"
             x:Class="TaskNotes.MVVM.Views.AddTaskView"
             x:DataType="vm:TaskGestorViewModel"
             Title="Nueva Tarea"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="25">

            <VerticalStackLayout Spacing="5">
                <Label Text="DETALLES DE LA TAREA" 
                       FontSize="12" 
                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" 
                       FontAttributes="Bold"
                       Margin="5,0"/>

                <Border StrokeShape="RoundRectangle 10" 
                        StrokeThickness="0"
                        Padding="15,5"
                        BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}">
                    <Entry Placeholder="¿Qué hay que hacer?" 
                           PlaceholderColor="Gray"
                           Text="{Binding NewTaskTitle}"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                </Border>

                <Border StrokeShape="RoundRectangle 10" 
                        StrokeThickness="0"
                        Padding="15,10"
                        Margin="0,10,0,0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}">
                    <Editor Placeholder="Añadir notas o descripción..." 
                            PlaceholderColor="Gray"
                            HeightRequest="120"
                            Text="{Binding NewTaskDescription}"
                            FontSize="14"
                            TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                            AutoSize="TextChanges"/>
                </Border>
            </VerticalStackLayout>

            <BoxView HeightRequest="1" Color="{AppThemeBinding Light=#EEE, Dark=#333}" />

            <Grid ColumnDefinitions="*, *" ColumnSpacing="15">

                <VerticalStackLayout Grid.Column="0" Spacing="8">
                    <Label Text="Fecha Límite" 
                           FontAttributes="Bold" 
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    <Border StrokeShape="RoundRectangle 8"
                            Stroke="{AppThemeBinding Light=#DDD, Dark=#444}"
                            StrokeThickness="1"
                            BackgroundColor="Transparent">
                        <DatePicker Date="{Binding NewTaskDate}" 
                                    MinimumDate="01/01/2024"
                                    TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="8">
                    <Label Text="Prioridad" 
                           FontAttributes="Bold" 
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    <Border StrokeShape="RoundRectangle 8"
                            Stroke="{AppThemeBinding Light=#DDD, Dark=#444}"
                            StrokeThickness="1"
                            BackgroundColor="Transparent">
                        <Picker x:Name="PriorityPicker"
                                SelectedItem="{Binding NewTaskPriority}"
                                Title="Nivel"
                                TitleColor="Gray"
                                TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}">
                        </Picker>
                    </Border>
                </VerticalStackLayout>
            </Grid>

            <Button Text="Guardar Tarea" 
                    Margin="0,30,0,0"
                    HeightRequest="55"
                    CornerRadius="12"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    Command="{Binding AddTaskCommand}">
                <Button.Shadow>
                    <Shadow Brush="{StaticResource PrimaryDark}" Radius="10" Opacity="0.4" Offset="0,4"/>
                </Button.Shadow>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>