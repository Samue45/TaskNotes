<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TaskNotes.MVVM.ViewModels"
             xmlns:models="clr-namespace:TaskNotes.MVVM.Models"
             xmlns:converters="clr-namespace:TaskNotes.MVVM.Converters"
             x:Class="TaskNotes.MVVM.Views.HomePageView"
             x:DataType="vm:TaskGestorViewModel"
             Title="Block de Tareas">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToStrikethroughConverter x:Key="BoolToStrikethroughConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *" Padding="15">

        <Label Grid.Row="0"
               Text="Mis tareas"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark=White}"
               Margin="0,10,0,20" />

        <Grid Grid.Row="1">

            <CollectionView ItemsSource="{Binding Tasks}"
                            SelectionMode="None">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <Grid VerticalOptions="Center" HorizontalOptions="Center">
                        <VerticalStackLayout Spacing="15" VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="ðŸ“" 
                                   FontSize="50" 
                                   HorizontalTextAlignment="Center" 
                                   Opacity="0.5"/>
                            <Label Text="No hay tareas pendientes" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center" 
                                   TextColor="Gray"/>
                            <Label Text="Toca el botÃ³n '+' para empezar" 
                                   FontSize="14"
                                   HorizontalTextAlignment="Center" 
                                   TextColor="Silver"/>
                        </VerticalStackLayout>
                    </Grid>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:TaskItem">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Eliminar"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TaskGestorViewModel}}, Path=DeleteTaskCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border Padding="15" 
                                    Stroke="LightGray" 
                                    StrokeShape="RoundRectangle 12" 
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#252525}">

                                <Grid ColumnDefinitions="Auto, *, Auto, Auto">

                                    <CheckBox IsChecked="{Binding IsCompleted}" 
                                              Grid.Column="0"
                                              VerticalOptions="Center"/>

                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2" Margin="10,0">
                                        <Label Text="{Binding Title}" 
                                               FontAttributes="Bold" 
                                               FontSize="16"
                                               TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToStrikethroughConverter}}"/>
                                        <Label Text="{Binding Description}" 
                                               FontSize="12" 
                                               TextColor="Gray" 
                                               LineBreakMode="TailTruncation"/>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,10,0">
                                        <Label Text="{Binding Priority}" FontSize="15" FontAttributes="Bold" TextColor="{AppThemeBinding Light=Purple, Dark=Plum}"/>
                                        <Label Text="{Binding DueDate, StringFormat='{0:dd/MM}'}" FontSize="11" HorizontalOptions="End"/>
                                    </VerticalStackLayout>

                                    <Button Grid.Column="3"
                                            Text="ðŸ—‘ï¸"
                                            BackgroundColor="Transparent"
                                            TextColor="Red"
                                            FontSize="27"
                                            Padding="0"
                                            HeightRequest="40"
                                            WidthRequest="40"
                                            VerticalOptions="Center"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TaskGestorViewModel}}, Path=DeleteTaskCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <HorizontalStackLayout HorizontalOptions="End" 
                                   VerticalOptions="End" 
                                   Spacing="15" 
                                   Margin="0,0,10,20">

                <Button Text="ðŸŽ™ï¸"
                        FontSize="24"
                        WidthRequest="60"
                        HeightRequest="60"
                        CornerRadius="30"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        Shadow="{Shadow Brush=Black, Offset='2,2', Opacity=0.2}"
                        Clicked="OnShowAudioPopupClicked"/>

                <Button Text="+"
                        FontSize="28"
                        WidthRequest="60"
                        HeightRequest="60"
                        CornerRadius="30"
                        Shadow="{Shadow Brush=Black, Offset='2,2', Opacity=0.2}"
                        Clicked="OnAddTaskClicked"/>
            </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>